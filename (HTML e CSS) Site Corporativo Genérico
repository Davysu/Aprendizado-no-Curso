        padding: 100px 0px;
        z-index: 100;
        transition: 1.0s;
    }
    .menu a{
        display:block;
        padding: 20px;
    }
    .esconder-menu{
        position: absolute;
        top: 40px;
        right: 40px;
    }
    #check:checked~ .menu{
        right: 0;
    }
    /*pessoas*/
    #pessoas{
        flex-direction: column;
    }
    /*icons*/
    .conteudos-icons{
        flex-direction: column;
    }
    .conteudos-icons div{
        border: none;/*quando chegar ao tamanho de tablet ou celular,
        as bordas desaparecerão*/
    }

/*formulário*/
.dados-form{
    flex-direction: column;
}

}/*fechamento 768px*/
